<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micro_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t "welcome_s" %> </h1>
  <h2>
    <%= t ".des_home" %>
    <%= link_to t("ror_tut"), Settings.railstutorial %>
    <%= t ".sample_app" %>.
  </h2>
  <%= link_to t("sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%=  link_to image_tag("Ruby_On_Rails_Logo.svg", alt: "Rails logo",
  class: "image"),  Settings.r_o_r %>
<% end %>
